@using ProjectManager.Components.Modals

@rendermode InteractiveServer

@attribute [Authorize]
@page "/projects"

@inject NavigationManager NavigationManager

<h2>Projects</h2>

@if (_loading)
{
    <p>Loading...</p>
}
else
{
