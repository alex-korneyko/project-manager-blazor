    @*         <div class="text-danger mt-2">@_error</div> *@
    @*     } *@
    @* </div> *@

    @if (_projects?.Count == 0)
    {
        <p>There are no projects yet.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var project in _projects!)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@project.Name</strong>
                        <div class="text-muted small">@project.Description</div>
                    </div>
                <button class="btn btn-outline-secondary" @onclick="@(() => NavigationManager.NavigateTo($"/projects/{project.Id}"))">Open</button>
                </li>
            }
        </ul>
    }
}

<NewProjectModal @ref="_newProjectModal" OnModalActionSucceeded="OnProjectCreated"/>

